@model Candidate

<div>
    <h3 class="display-4">Congratulations</h3>
    <p class="lead">Your application has been <mark>received</mark></p>
    <p class="lead">Many thanks for your interest.</p>
    <hr />
    <blockquote class="blockquote">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt.</p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Application</a>
        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</div>