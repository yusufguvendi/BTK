@model Candidate
<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="EMail">E-Mail</label>
        <input asp-for="EMail" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
            <option value="26">26</option>
            <option value="27">27</option>
            <option value="28">28</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked>
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core Web API">
            <label>ASP.NET Core Web API</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="C#">
            <label>C#</label>
        </p>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>